class ReverseInteger {
    public int reverse(int x) {
        
        int y=Math.abs(x);
        long result=0;
        while(y>0){
            result+=y%10;
            y/=10;
            if(y>0){
                result*=10;
            }
        }

        // return x>0?2147483647<result?0:(int)result:-2147483648>-result?0:(int)-result;
        return x>0?(Math.pow(2,31)-1)<result?0:(int)result:-Math.pow(2,31)>-result?0:(int)-result;

    }
}

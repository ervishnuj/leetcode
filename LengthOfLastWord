class LengthOfLastWord {
    public int lengthOfLastWord(String s) {
        String  str=s.trim();
        if(str.length()==0)return 0;
        int len=str.length()-1;
        int result=0;
        while(len>=0){
            if(str.charAt(len)!=' '){
                result++;
            }else{
                break;
            }
            len--;
        }
        return result;

    }
}
